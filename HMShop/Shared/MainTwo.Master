    <script type="text/javascript">
        function ToTopOfPage(sender, args) {
            setTimeout("window.scrollTo(0, 0)", 0);
        }
        $(document).ready(function () {
            $('#titleCart').hide();
            $('#listCart').hide();
            $('#listProfile').hide();
            var rowCount = $('#tblCart tr').length;

            $('#shopCart').mouseover(function () {
                $('#listProfile').hide();
                if (rowCount <= 3) {
                    $('#titleCart').show();
                    $('#listCart').hide();
                }
                else {
                    $('#listCart').show();
                }
            });

            $('#shopCart').mouseleave(function () {
                if (rowCount <= 3) {
                    $('#titleCart').hide();
                    $('#listCart').hide();
                }
                else {
                    $('#listCart').hide();
                }
            });

            $('#shopCart').click(function () {
                if (rowCount <= 3) {
                    $('#listProfile').hide();
                    $('#titleCart').toggle();
                    $('#listCart').hide();
                }
                else {
                    $('#listProfile').hide();
                    $('#listCart').toggle();
                }
            });
            
            $('#profile').mouseover(function () {
                $('#listCart').hide();
                $('#listProfile').show();
            });

            $('#profile').mouseleave(function () {
                $('#listCart').hide();
                $('#listProfile').hide();
            });

            $('#profile').click(function () {
                $('#listCart').hide();
                $('#listProfile').toggle();
            });
        });
    </script>
